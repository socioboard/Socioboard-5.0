@section Scripts{
    <script>
        function CreateDemoReq() {

            var firstName = $('#req_first_name').val();
            var lastName = $('#req_last_name').val();
            var email = $('#req_Business_Email').val();
            var company = $('#req_Company').val();
            var Phone = $('#req_phone').val();
            var skype = $('#req_skype').val();

            $.ajax({

                type: "POST",

                url: "@ViewBag.ApiDomain/api/user/DemoRequest",

                data: { "firstName": firstName, "lastName": lastName, "company": company, "emailId": email, "phoneNumber": Phone, "skype": skype, "demoPlanType": "Demo" },

                //contentType: "application/json; charset=utf-8",

                dataType: "html",

                success: function (msg) {

                    alertify.set({ delay: 5000 });
                    alertify.success("Request Sent Successfully");
                    $('#req_first_name').val("");
                    $('#req_last_name').val("");
                    $('#req_Business_Email').val("");
                    $('#req_Company').val("");
                    $('#req_phone').val("");
                    $('#req_skype').val("");
                },
                error: function (msg) {
                    alertify.set({ delay: 5000 });
                    alertify.error(msg.responseText);
                    $('#ImgLoading').hide();
                    $('#submitButton').show();
                    return false;
                }

            });
        }
    </script>

    @if (TempData["Error"] != null)
    {
        <script>
            $(document).ready(function () {
                console.log("@Convert.ToString(TempData["Error"])");
                alertify.set({ delay: 5000 });
                alertify.error("@Convert.ToString(TempData["Error"])");
            });
        </script>

    }
    <script>
        $(document).ready(function () {
            debugger;
            setTimeout(function () {
                gotohome();
            }, 3000);
            
        });
    </script>
}
